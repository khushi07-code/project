<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>show data</title>
    <style>
        table,
        th,
        tr,
        td{
            border:2px solid black;

        }
    </style>
</head>
<body>
    <h2>Users:</h2>
    <form method="get" action="/user/add">
        <button>add new user</button>
    </form>
    <table>
        <tr>
            <th>ID</th>
            <th>USERNAME</th>
            <th>EMAIL</th>
        </tr>
        <% for(user of users) {%>
            <tr>
                <td><%=user.id%></td>
                <td><%=user.username%></td>
                <td><%=user.email%></td>
                <td>
                <form method="get" action="/user/<%= user.id %>/edit">
                    <button>edit</button>
                </form>
                </td>
                <td>
                <form method="post" action="/user/<%= user.id %>?_method=DELETE">
                    <button>delete</button>
                </form>
                    
                </td>
            </tr>
        <% } %>
    </table>
</body>
</html>